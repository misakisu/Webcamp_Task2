<body>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
			  <%= link_to "Show", book_path(book.id) %>
			</td>
			<td>
			  <%= link_to "Edit", edit_book_path(book.id) %>
			</td>
			<td>
			  <%= link_to "Destroy", book_path(book.id), method: :delete %>
			</td>
		</tr>
        <% end %>
</table>

<% if @book.errors.any? %>
    <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
<% end %>

<h2 class="space">New book</h2>
<%= form_for(@book) do |f| %>
    <p>Title</p>
    <div class="space"><%= f.text_field :title %></div>

    <p>Body</p>
    <div class="space"><%= f.text_area :body %></div>

    <div><%= f.submit ' Create Book ' %><div>
<% end %>

</body>
